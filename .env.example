# Ferelix Server - Environment Configuration
# Copy this file to .env and update the values

# ================================
# REQUIRED SETTINGS
# ================================

# JWT Secret Key - MUST be changed in production
# Generate with: openssl rand -hex 32
SECRET_KEY=change-this-to-a-secure-random-key-at-least-32-characters-long

# ================================
# DATABASE CONFIGURATION
# ================================

# SQLite (default - good for small deployments)
DATABASE_URL=sqlite+aiosqlite:///./ferelix.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://ferelix:password@localhost:5432/ferelix

# Docker with SQLite (database stored in /config volume)
# DATABASE_URL=sqlite+aiosqlite:///config/ferelix.db

# Docker with PostgreSQL
# DATABASE_URL=postgresql+asyncpg://ferelix:password@postgres:5432/ferelix

# ================================
# JWT TOKEN CONFIGURATION
# ================================

# Access token lifetime (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token lifetime (in days)
REFRESH_TOKEN_EXPIRE_DAYS=7

# JWT signing algorithm
ALGORITHM=HS256

# ================================
# CORS CONFIGURATION
# ================================

# Allowed origins for CORS (comma-separated)
# Use "*" for development, restrict in production
ALLOWED_ORIGINS=*

# Production example:
# ALLOWED_ORIGINS=https://ferelix.yourdomain.com,https://app.yourdomain.com

# ================================
# SERVER CONFIGURATION
# ================================

# Server host (0.0.0.0 for Docker, 127.0.0.1 for local dev)
HOST=0.0.0.0

# Server port
PORT=8000

# ================================
# DOCKER-SPECIFIC (if using PostgreSQL)
# ================================

# PostgreSQL password (used in docker-compose.yml)
# DB_PASSWORD=secure-database-password
